<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MareVita" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Fondo da aplicación -->
        <item name="android:windowBackground">@drawable/background</item>
        <item name="colorAccent">@color/blue</item>


        <!-- Cores principais -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>

        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Fondo de botóns, cartas, etc. -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/shadow_grey</item>

        <!-- Para botóns e outros compoñentes -->
        <item name="colorPrimaryContainer">@color/blue</item>
        <item name="colorOnPrimaryContainer">@color/black</item>

        <!-- Outras personalizacións -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>

        <item name="colorControlActivated">@color/blue</item>

    </style>


    <style name="MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- just override the colors used in the default style -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnSurface">@color/black</item>

    </style>


</resources>